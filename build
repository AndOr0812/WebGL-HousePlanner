#!/bin/sh

cd "$(dirname "$0")"/css
rm houseplanner.css
for f in $(find ./src/ -name '*.css')
do
	#cat "$f" >> "css/houseplanner.css"
	java -jar yuicompressor.jar --type css "$f" >> ../css/houseplanner.css
done

cd "$(dirname "$0")"/js/
rm three/three.extras.js
java -jar compiler.jar --language_in ECMASCRIPT5 --js_output_file=src.js 'src/**.js'
java -jar compiler.jar --language_in ECMASCRIPT5 --js_output_file=three/three.extras.js 'three/extras/**.js'
rm houseplanner.zip
rm houseplanner.js
cat src.js >> houseplanner.js
rm src.js